{
  "extends": ["@commitlint/config-conventional"],
  "formatter": "@commitlint/format",
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "body-empty": [2, "always"],
    "footer-empty": [2, "always"]
  }
}
